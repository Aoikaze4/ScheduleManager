<%= render partial: 'layouts/validation', locals: { model: @event }%>
<div class="container">
  <div class="row">
    <div class="col-md-5 my-5">
      <h1>イベントを編集する</h1>
    </div>
  </div>

  <%= form_with model: @event, url: event_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label "イベント名", class: "col-md-3 offset-md-2" %>
      <%= f.text_field :event_name, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label "日付", class: "col-md-3 offset-md-2" %>
      <%= f.datetime_field :event_at, class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label "イベントの説明", class: "col-md-3 offset-md-2" %>
      <%= f.text_area :description, class: "form-control col-md-5" %>
    </div>


    <% unless user_signed_in? %>
    <!-- ログインしてるかつ、ログインしてるユーザーが作成ユーザーと同じ時のみ表示に変更すること -->
      <div class="form-group row">
        <%= f.label "イベント主催者", class: "col-md-3 offset-md-2" %>
        <%= f.text_field :user_name, class: "form-control col-md-5", placeholder: "名無し" %>
      </div>
    <% end %>

    <div class="form-group text-center btn-lg">
      <%= f.submit "更新する", class: "btn btn-primary mx-3 my-2", style: "width: 240px; height: 50px" %>
    </div>

  <% end %>
