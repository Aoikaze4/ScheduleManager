<div class="container">
  <div class="row">
    <div class="col-md-5 my-5">
      <h1><%= @event.event_name %></h1>
    </div>
  </div>

  <%= @event.event_at %>
  <%= @event.description %>

  <%= link_to "編集する", edit_event_path(@event.id), method: :delete, class: "btn btn-success btn-sm", data: {confirm: "このイベント【" + @event.event_name + "】を削除しますか？"} %>

  <%= link_to "削除する", event_path(@event.id), method: :delete, class:"btn btn-danger btn-sm", data: {confirm: "このイベント【" + @event.event_name + "】を削除しますか？"} %>


</div>