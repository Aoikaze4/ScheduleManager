<div class="container">
  <div class="row">
    <div class="col-md-5 my-5">
      <h1><%= @event.event_name %></h1>
    </div>
    <div class="col-md-7 d-flex flex-column justify-content-end align-items-end">
      <div class="bd-highlight">予定日時：<%= @event.event_at %></div>
      <div class="bd-highlight">オーナー：<%= @event.user_name %></div>
      <div class="bd-highlight">簡単な説明：<%= @event.description %></div>
    </div>
  </div>

  <div class="row">


    <!-- @eventモデルのuser_idが空（非ログインユーザーで作成されたもの）だったら誰でも編集可能
         また、user_idが入っている場合ログインしてるユーザーと一致すれば、その人のみが編集可能 -->
    <div class="col-md-3">
      <% if @event.user_id == nil %>
        <% if user_signed_in? %>
          <% if @event.user_id == current_user.id %>
            <%= link_to "編集する", edit_event_path(@event.id), class: "btn btn-success mr-3" %>
          <% end %>
        <% end %>
      <% end %>

      <!-- ログインしているかつ、ログインしているユーザーとイベント作成者のURLが同じ場合のみ表示 -->
      <% if user_signed_in? %>
        <% if @event.user_id == current_user.id %>
          <%= link_to "削除する", event_path(@event.id), method: :delete, class:"btn btn-danger",
          data: {confirm: "このイベント【" + @event.event_name + "】を削除しますか？"} %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- 既に参加しているユーザーIDは省く -->

  <div class="row m-3">
    <%= form_with model: @event_join, url: {controller: 'event_join_statuses', action: 'join'}, local: true do |f| %>
      <%= f.label "名前を入れて予定を入力する" %>
      <div class="d-flex">
        <%= f.text_field :user_name, placeholder: "名前", class: "form-control ml-2" %>
        <%= f.submit "予定を入力する", class: "btn btn-success ml-3" %>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? && @event.user_id != current_user.id %>
    <div class="row m-3">
      <%= link_to "ログインしているユーザー名で参加する", events_path, method: :post, class: "btn btn-primary ml-2" %>
    </div>
  <% else %>
    <div class="row m-3">
      <%= form_with model: @event_join, url: {controller: 'event_join_statuses', action: 'join'}, local: true do |f| %>
        <%= f.text_field :user_name, placeholder: "名前", class: "form-control" %>
        <%= f.submit "予定を入力する", class: "btn btn-success" %>
      <% end %>
    </div>
  <% end %>

  <div class="row mt-3">
    <table class="table col-md-6">
      <thead>
        <th class="table-active">
          名前
        </th>
        <th class="table-active">
          予定状況
      </thead>

      <tbody>
        <% @users.each do |f| %>
        <tr>
          <td><%= f.user_name %></td>
          <td class="form-inline">
            <%= form_with model: [@event,f], url: event_event_join_status_path(@event.id,f.id), method: :patch, local: true do |f| %>
              <%= f.select :status, EventJoinStatus.statuses.keys.to_a, {}, class: "form-control", style: "width:70%;" %>
              <%= f.submit "更新", class: "btn btn-success btn-sm ml-2" %>
            <% end %>

            <%= link_to "削除", root_path, class: "btn btn-danger btn-sm ml-2" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="col-md-6">
      <div>
        <%= form_with model: [@event,@comment], local: true do |f| %>
          <% unless user_signed_in? %>
            <%= f.label "名前" %>
            <%= f.text_field :user_name, placeholder: "名前", class: "form-control" %>
          <% else %>
            <%= attachment_image_tag current_user, :image, size:"75x75", fallback: "no_image.jpg", class: "rounded-circle" %>
            <%= current_user.name %>
          <% end %>

          <div class="form-group mt-2">
            <%= f.label "コメントする" %>
            <%= f.text_area :comment, placeholder: "コメントを入力", class: "form-control" %>
          </div>

          <div class="text-right m-3 mb-4">
            <%= f.submit "投稿する", class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>

      <div>

      <% @comments.each do |f| %>
        <div class="row mt-3 justify-content-between d-flex p-1 rounded border">
          <div class="col-md-2 mt-3">
            <%= attachment_image_tag f.user, :image, size:"75x75", fallback: "no_image.jpg", class: "rounded-circle" %>
          </div>

          <div class="col-md-10">
            <div class="row justify-content-between d-flex">
              <p class="col-md-5 ml-4 mt-2"><%= f.user_name %></p>
              <p class="text-right mr-4 col-md-5"><%= f.created_at %></p>
            </div>

            <div class="row d-flex align-items-center">
              <div class="col-md-10 ml-4 p-1 says">
                <p class="m-2"><%= f.comment %></p>
              </div>

              <% if user_signed_in? %>
                <div class="col-md-2">
                  <% if f.user_id == current_user.id %>
                    <%= link_to "削除", event_comment_path(f.event_id,f.id), method: :delete,
                      data: {confirm: "このコメントを削除しますか？"}, class: "btn btn-danger btn-sm" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      </div>

    </div>
  </div>
</div>
