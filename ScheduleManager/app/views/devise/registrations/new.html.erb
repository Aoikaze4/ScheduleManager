<div class="container">
  <div class="row">
    <div class="col-md-4 m-5 px-4 py-1 text-center">
      <h2>新規ユーザー登録</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label "アイコン", class: "col-md-3 offset-md-2" %>
      <%= f.attachment_field :image, class: "col-md-5 form-control-file" %>
    </div>

    <div class="form-group row">
      <%= f.label "ニックネーム", class: "col-md-3 offset-md-2" %>
      <%= f.text_field :name, autofocus: true, placeholder: "山田一郎", class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label "メールアドレス", class: "col-md-3 offset-md-2" %>
      <%= f.email_field :email, placeholder: "sample@email.co.jp", class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label "パスワード", class: "col-md-3 offset-md-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label "パスワード（確認用）", class: "col-md-3 offset-md-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-5" %>
    </div>

    <div class="form-group text-center btn-lg">
      <%= f.submit "新規登録", class: "btn btn-success ml-3 mt-3", style: "width: 20%" %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 m-4 px-4 py-1 text-center">
      <h2>既に登録済みの方</h2>
    </div>
  </div>
  <div class="field row justify-content-center mx-auto d-flex align-items-center text-center">
    <div class="col-md-5 mr-auto offset-md-3 form-group m-0 mb-4">
      <u><%= link_to "こちら", new_user_session_path %></u>
      <span> からログインしてください。</span>
    </div>
  </div>
</div>